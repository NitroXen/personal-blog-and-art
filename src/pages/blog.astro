---
import BaseLayout from "../layout/BaseLayout.astro";
import BlogList from "../components/BlogList";

async function getPosts() {
  const allPosts = await fetch("https://jsonplaceholder.typicode.com/posts");
  const posts = await allPosts.json();
  return posts;
}

const myPosts = async () => await getPosts();
---

<BaseLayout>
  <h2 class="text-center text-6xl my-6">My Blog</h2>
  <BlogList posts={await myPosts()} />
</BaseLayout>
